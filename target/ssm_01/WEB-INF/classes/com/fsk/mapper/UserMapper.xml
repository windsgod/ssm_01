<mapper namespace="com.fsk.dao.UserDao">

    <!--登录-->
    <select id="login" resultType="com.fsk.bean.User">
        select * from user where name=#{name} and password=#{password};
    </select>

    <!--注册-->
    <!--返回值为ID-->
    <insert id="register" parameterType="com.fsk.bean.User" useGeneratedKeys="true" keyProperty="id">
        insert into user (id,name,password,email,nickname,photo) value (#{id},#{name},#{password},#{email},#{nickname},#{photo});
    </insert>


